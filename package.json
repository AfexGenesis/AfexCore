{
  "name": "afexgenesis-laboratory",
  "version": "2.1.5",
  "description": "AfexGenesis Genetic Laboratory Software",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "dist": "electron-builder"
  },
  "keywords": [
    "genetic",
    "laboratory",
    "electron",
    "webview",
    "biology",
    "dna"
  ],
  "author": "Nirmal Weerapperuma",
  "license": "CC-BY-NC-4.0",
  "devDependencies": {
    "electron": "^38.1.2",
    "electron-builder": "^26.7.0"
  },
  "dependencies": {
    "tailwindcss": "^4.1.13"
  },
  "build": {
    "appId": "com.afexgenesis.afexcore",
    "productName": "AfexCore",
    "icon": "assets/t-rex.ico", 
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "css/**/*",
      "js/**/*",
      "assets/**/*",
      "emojis/**/*",
      "build/**/*",
      "reload.js",
      "renderer.js"
    ],
  "extraResources": [
    {
      "from": "assets",
      "to": "assets",
      "filter": ["**/*"]
    }
  ],
    "win": {
      "target": "dir",
      "icon": "assets/t-rex.ico"
    },
    "mac": {
      "category": "public.app-category.education",
      "icon": "emojis/t-rex.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "emojis/t-rex.png"
    }
  }
}
